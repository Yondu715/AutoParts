  <servlet-mapping>
   <servlet-name>
    WebController
   </servlet-name>
   <url-pattern>
	/main
   </url-pattern>
   <url-pattern>
	/auth
   </url-pattern>
   <url-pattern>
	/add
   </url-pattern>
   <url-pattern>
	/delete
   </url-pattern>
  </servlet-mapping>
</web-app>